#headline{
	width:100%;
	height:300px;
	min-width: 1263px;
	position: relative;
	background: linear-gradient(to right bottom,rgba(0,0,0,0.8),rgba(0,0,0,0)),url(../images/header3.jpg) no-repeat center;
}
#headline .hgroup2{
	width:1263px;
	padding: 100px 0 0 50px;
	margin: 0 auto;
	box-sizing: border-box;
}
#headline .hgroup2 h2{
   font-size: 40px;
   color:#eee;
   padding: 5px 0 0 20px;
   font-weight: bold;

}
#headline .hgroup2 h4{
	font-size: 30px;
	color:#eee;
	padding: 0px 0 0 20px;
}

/*旅游页面样式*/
#content .list figure{
	width:910px;
	border:1px solid #eee;
	
	position: relative;
	height:230px; 
	margin:0 0 20px 0;
}
#content .list figure .tourdoc hgroup{
	width:310px;
}
#content .list figure .tourdoc hgroup h2{
	margin:10px 0 5px 20px;
	color:#999;
	/*border-bottom: 1px solid #eee;*/
}
#content .list figure .tourdoc hgroup h4{
	margin:10px 0 5px 20px;
	color:#999;
	font-size: 16px;
	line-height: 1.5;
}
#content .list figure img{
	float:left;
}
#content .list figure .tourdoc{
    width:530px;
    float:right;
}
#content .list figure .tourdoc li{
	margin:5px 0 5px 0;
	font-size: 16px;
	color:#999;
}

#content .list figure .tourdoc ul span{
	display: inline-block;
	
	border-radius: 5px;
	padding:2px 3px;
	margin:0 25px 0 20px;
	color:#fff;
	background: #EE6A50;

 }
 #content .list .tourdoc .buy{
 	position: absolute;
 	top:50px;
 	right:20px;
 	color:#999;
 }
 #content .list .tourdoc .buy .price span{
 	font-size: 25px;
 	color:#ff6600;
 }
 #content .list .tourdoc .buy .buyticket button{
        width:150px;
        height: 40px;
        background: #f60;
        text-align: center;
        color:#fff;
        line-height: 40px;
        border:0;
        font-size: 20px;
        border-radius: 5px;
        margin:10px 0 0 0 ;
        cursor: pointer;
 }
 #content .list .tourdoc footer{
 	height:30px;
 	width:530px;
 	background: #fafafa;
 	line-height: 30px;
 	font-size: 16px;	
 	border-top:1px solid #eee;
 	position: absolute;
 	bottom:0;
 	text-indent: 20px;
 	color:#999;
 }
 #content .list .tourdoc .tag1{
 	position: absolute;
 	padding:0 5px;
 	height:20px;
 	font-size: 14px;
 	line-height: 20px;
 	color:#fff;
 	background: #FF4500;
 	top:0;
 	left:0;
 }
 #content .list .tourdoc .tag2{
 	position: absolute;
 	width:40px;
 	height: 40px;
 	top:0;
 	right:0;
 	background: url(../images/disc.png);
 }
 #content .list .tourdoc .tag2 span{
 	display: block;
 	padding:0 0 0 15px;
 	transform: rotate(45deg);
 	font-size: 14px;
 	color:red;
 }

 /*交通页面样式*/
#content .list .airticket h2,#content .list .newticket h2{
	padding:20px 0 20px 10px;
	border-bottom: 1px dashed #eee;
	color:#999;
	letter-spacing: 1px;
}
#content .list .tickettype li,#content .list .newticket li{
	height:30px;
	line-height: 30px;
	color:#999;
	display: inline-block;
	margin:10px 20px 10px 0;
	
}
#content .list .tickettype li:nth-child(1),#content .list .newticket li:nth-child(1)
{
	padding-left:10px;
}
#content .list .tickettype li:nth-child(2),#content .list .newticket li:nth-child(2)
{
	background: #45b800;
	border-radius: 5px;
	color:#fff;
	padding:2px 5px;
}
#content .list .airticket .ticketcity,#content .list .airticket .tickettime,#content .list .airticket .buyticket{
	
	display:inline-block;

}
#content .list .airticket .ticketcity p,#content .list .airticket .tickettime p{
	text-indent: 10px;
	color:#999;
	height:40px;
	line-height: 40px;
	padding:10px 0 10px 0;
}
#content .list .airticket .ticketcity input,#content .list .airticket .tickettime input{
	width:240px;
	padding-left:10px;
	margin-left:10px;
	color:#999;
	height:40px;
	border:1px solid #eee;
	border-radius: 5px;
	font-size: 20px;
}
#content .list .airticket .buyticket{
	/*height:120px;
	width:120px;*/
	vertical-align: top;
}
#content .list .airticket .buyticket button{
   width:90px;
   height: 90px;
   line-height: 90px;
   color:#fff;
   border:0;
   background: #f60;
   border-radius: 5px;
   font-size: 20px;
   margin:20px 0 0 20px;
  
}
#content .list .newticket table{
	width:100%;
	margin:20px auto;
	border-collapse: collapse;
	border:1px solid #ddd;
	color:#999;

}
#content .list .newticket table tr:nth-child(1){
	font-weight: bold;
}
#content .list .newticket table tr:nth-child(2n){
	background: #fafafa;
}
#content .list .newticket table tr:hover{
	background: #eee;
}
#content .list .newticket table td{
	border-bottom: 1px solid #ddd;
	height:50px;
	text-align: center;
}
#content .list .newticket table .price{
	color:#f60;
}
#content .list .newticket table .reserve{
	display: inline-block; /* 居中对齐,在父元素中使用text-align:center;即可*/
	background: #f60;
    /*display:block;  居中对齐，必须margin：0 auto;*/
	color:#fff;
	font-size: 20px;
	width:100px;
	height:35px;
	line-height: 35px;
	text-align: center;
	border-radius: 5px;

}
#content .list .newticket table .more{
	color:#999;
	font-size: 20px;
}


